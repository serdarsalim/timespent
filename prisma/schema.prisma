generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                  String               @id @default(cuid())
  name                String?
  email               String?              @unique
  emailVerified       DateTime?
  image               String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  accounts            Account[]
  goals               Goal[]
  productivityRatings ProductivityRating[]
  scheduleEntries     ScheduleEntry[]
  sessions            Session[]
  profile             UserProfile?
  weeklyNotes         WeeklyNote[]
  sharesSent          Share[]              @relation("SharesSent")
  sharesReceived      Share[]              @relation("SharesReceived")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserProfile {
  id                    String   @id @default(cuid())
  userId                String   @unique
  personName            String?
  dateOfBirth           String?
  weekStartDay          Int      @default(0)
  recentYears           String   @default("10")
  goalsSectionTitle     String   @default("2026 GOALS")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  productivityViewMode  String   @default("day")
  productivityScaleMode String   @default("3")
  showLegend            Boolean  @default(true)
  weeklyGoalsTemplate   String   @default("")
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Goal {
  id             String      @id @default(cuid())
  userId         String
  title          String
  timeframe      String
  statusOverride String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  archived       Boolean     @default(false)
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  keyResults     KeyResult[]
}

model KeyResult {
  id        String   @id @default(cuid())
  goalId    String
  title     String
  status    String   @default("on-hold")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  goal      Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)
}

model ScheduleEntry {
  id         String   @id @default(cuid())
  userId     String
  dayKey     String
  time       String
  endTime    String?
  title      String
  color      String?
  repeat     String?  @default("none")
  repeatDays String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, dayKey])
}

model ProductivityRating {
  id        String   @id @default(cuid())
  userId    String
  key       String
  rating    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
}

model WeeklyNote {
  id        String   @id @default(cuid())
  userId    String
  weekKey   String
  content   String
  dos       String?
  donts     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekKey])
}

model Share {
  id               String   @id @default(cuid())
  ownerId          String
  owner            User     @relation("SharesSent", fields: [ownerId], references: [id], onDelete: Cascade)
  recipientEmail   String
  recipientUserId  String?
  recipientUser    User?    @relation("SharesReceived", fields: [recipientUserId], references: [id], onDelete: SetNull)
  createdAt        DateTime @default(now())
  revokedAt        DateTime?

  @@unique([ownerId, recipientEmail])
  @@index([recipientEmail])
}

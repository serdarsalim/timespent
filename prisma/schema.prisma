generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js tables
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // User's app data
  profile       UserProfile?
  goals         Goal[]
  scheduleEntries ScheduleEntry[]
  productivityRatings ProductivityRating[]
  weeklyNotes   WeeklyNote[]
  focusAreas    FocusArea[]
  monthEntries  MonthEntry[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// App-specific tables
model UserProfile {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  personName    String?
  dateOfBirth   String?
  weekStartDay  Int      @default(0)
  recentYears   String   @default("10")
  goalsSectionTitle String @default("2026 GOALS")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Goal {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  timeframe   String
  statusOverride String?
  keyResults  KeyResult[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model KeyResult {
  id     String @id @default(cuid())
  goalId String
  goal   Goal   @relation(fields: [goalId], references: [id], onDelete: Cascade)
  title  String
  status String @default("pending")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScheduleEntry {
  id         String  @id @default(cuid())
  userId     String
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  dayKey     String  // Format: "YYYY-M-D"
  time       String
  endTime    String?
  title      String
  color      String?
  repeat     String? @default("none")
  repeatDays String? // JSON array of weekday indices

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, dayKey])
}

model ProductivityRating {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  key    String // Format: "YYYY-M-D" for days or "week-YYYY-W" for weeks
  rating Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, key])
}

model WeeklyNote {
  id      String @id @default(cuid())
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  weekKey String // Format: "week-YYYY-W"
  content String
  dos     String?
  donts   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, weekKey])
}

model FocusArea {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  name   String
  hours  String
  order  Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MonthEntry {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  monthKey String // Format: "YYYY-M"
  content  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, monthKey])
}
